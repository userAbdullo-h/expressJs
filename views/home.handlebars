<h1 class='mb-4'>Contact List</h1>
<a href='/contact/add' class='btn btn-primary mb-3'>New contact</a>

<table class='table table-bordered'>
	<thead class='table-light'>
		<tr>
			<th>Name</th>
			<th>Email</th>
			<th>Phone</th>
			<th>Action</th>
		</tr>
	</thead>
	<tbody>
		{{#each contacts}}
			<tr>
				<td>{{this.name}}</td>
				<td>{{this.email}}</td>
				<td>{{this.phone}}</td>
				<td>
					<a
						href='/contact/edit/{{this.id}}'
						class='btn btn-warning btn-sm'
					>Edit</a>
					<a
						href='/contact/delete/{{this.id}}'
						class='btn btn-danger btn-sm'
					>Delete</a>
				</td>
			</tr>
		{{/each}}
	</tbody>
</table>